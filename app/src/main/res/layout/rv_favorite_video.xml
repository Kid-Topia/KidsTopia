<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp">

    <ImageView
        android:id="@+id/favorite_video_iv"
        android:layout_width="330dp"
        android:layout_height="170dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/favorite_video_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/favorite_video_iv"
        app:layout_constraintTop_toBottomOf="@+id/favorite_video_channelId_tv" />

    <TextView
        android:id="@+id/favorite_video_channelId_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/favorite_video_iv"
        app:layout_constraintTop_toBottomOf="@+id/favorite_video_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>