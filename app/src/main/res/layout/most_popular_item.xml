<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/popular_cardview"
        android:layout_width="290dp"
        android:layout_height="150dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/most_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_kidstopia" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/gangwonmodubold"
        android:maxLines="1"
        android:maxWidth="290dp"
        android:text="@string/text_info"
        android:textColor="@color/grey88"
        android:textSize="26sp"
        app:layout_constraintTop_toBottomOf="@+id/popular_cardview" />

</androidx.constraintlayout.widget.ConstraintLayout>