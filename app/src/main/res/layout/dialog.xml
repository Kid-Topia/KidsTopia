<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_cancel"
    android:padding="20dp">

    <TextView
        android:id="@+id/tv_close1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/gangwonmodubold"
        android:text="키즈토피아를"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_close2"/>

    <TextView
        android:id="@+id/tv_close2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/gangwonmodubold"
        android:text="종료하시겠습니까?"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_close1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirm"
        android:layout_width="125dp"
        android:layout_height="46dp"
        android:background="@drawable/bg_dialog_confirm"
        android:fontFamily="@font/gangwonmodubold"
        android:text="확인"
        android:textColor="@color/white"
        android:textSize="18sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_cancel"
        app:layout_constraintTop_toBottomOf="@+id/tv_close2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel"
        android:layout_width="125dp"
        android:layout_height="46dp"
        android:background="@drawable/bg_rv_searchitem"
        android:fontFamily="@font/gangwonmodubold"
        android:text="취소"
        android:textColor="@color/primary_yellow"
        android:textSize="18sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_confirm"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_close2" />
</androidx.constraintlayout.widget.ConstraintLayout>